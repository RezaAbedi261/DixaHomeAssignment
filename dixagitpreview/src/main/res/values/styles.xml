<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="WhiteTextView" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LinkTextView" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/linkBlue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RoundBottomSheetModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_round_background</item>
    </style>

    <style name="RoundBottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundBottomSheetModalStyle</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bottomsheet_animation_enter</item>
        <item name="android:windowExitAnimation">@anim/bottomsheet_animation_exit</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>


</resources>